{
  "trailingComma": "none",
  "tabWidth": 4,
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "arrowParens": "avoid",
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@/app/(.*)$",
    "^@/features/(.*)$",
    "^@/components/(.*)$",
    "^@/hooks/(.*)$",
    "^@/shared/(.*)$",
    "^@/lib/(.*)$",
    "^../(.*)$",
    "^@/(.*)$"
  ],
  "importOrderParserPlugins": [
    "jsx",
    "typescript"
  ],
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ]
}
